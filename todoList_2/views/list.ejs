<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= heading%></h1>
    </div>
    
    <div class ="box">
        <% for(let i = 0;i<itm.length;i++){ %>
        <div class ="item">   
            <input type="checkbox">         
            <p><%=itm[i]%></p>        
        </div>
        <%}%>

       
        <form class="item" action="/" method="POST">
            <input type="text" name="item" placeholder="Add Item" autocomplete="off">
            <button type="submit" name="list" value=<%=heading%>>+</button>
        </form>
        

    </div>

    
<%- include("footer") -%>
   

   
 